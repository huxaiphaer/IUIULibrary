<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#a5afa5"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iuiu_library.huzykamz.iuiulibrary.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISLAMIC UNIVERSITY IN UGANDA"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="#1d3606"
        android:textStyle="italic"
        android:paddingBottom="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Library Application"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/mainactivity_image_view"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical|center_horizontal"
        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Borrow a book  Today , And Learn More!"
        android:paddingTop="60dp"
        android:id="@+id/textView7"
        android:textStyle="italic|bold"
        android:textColor="#030441"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
